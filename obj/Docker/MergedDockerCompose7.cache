name: dockercompose12077446871503659393
services:
  abnomalydetector:
    build:
      context: D:\Projects\API.Gateway
      dockerfile: AbnomalyDetector/Dockerfile
    depends_on:
      consul:
        condition: service_started
        required: true
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_HTTP_PORTS: "8080"
      ASPNETCORE_HTTPS_PORTS: "8081"
      CONSUL_HTTP_ADDR: http://consul:8500
      SERVICE_ADDRESS: abnomalydetector
      SERVICE_NAME: abnomalydetector
      SERVICE_PORT: "8087"
    image: abnomalydetector
    networks:
      mynet: null
    ports:
      - mode: ingress
        target: 8087
        published: "8087"
        protocol: tcp
      - mode: ingress
        target: 8080
        protocol: tcp
      - mode: ingress
        target: 8081
        protocol: tcp
    volumes:
      - type: bind
        source: C:\Users\Behtash\AppData\Roaming/Microsoft/UserSecrets
        target: /home/app/.microsoft/usersecrets
        read_only: true
        bind:
          create_host_path: true
      - type: bind
        source: C:\Users\Behtash\AppData\Roaming/Microsoft/UserSecrets
        target: /root/.microsoft/usersecrets
        read_only: true
        bind:
          create_host_path: true
      - type: bind
        source: C:\Users\Behtash\AppData\Roaming/ASP.NET/Https
        target: /home/app/.aspnet/https
        read_only: true
        bind:
          create_host_path: true
      - type: bind
        source: C:\Users\Behtash\AppData\Roaming/ASP.NET/Https
        target: /root/.aspnet/https
        read_only: true
        bind:
          create_host_path: true
  apigateway:
    build:
      context: D:\Projects\API.Gateway
      dockerfile: API.Gateway/Dockerfile
    depends_on:
      abnomalydetector:
        condition: service_started
        required: true
      consul:
        condition: service_started
        required: true
    environment:
      CONSUL_HTTP_ADDR: http://consul:8500
      SERVICE_ADDRESS: apigateway
      SERVICE_NAME: apigateway
      SERVICE_PORT: "8080"
    image: apigateway
    networks:
      mynet: null
    ports:
      - mode: ingress
        target: 8080
        published: "8080"
        protocol: tcp
  consul:
    command:
      - agent
      - -server
      - -bootstrap
      - -ui
      - -client=0.0.0.0
    image: hashicorp/consul:1.18
    networks:
      mynet: null
    ports:
      - mode: ingress
        target: 8500
        published: "8500"
        protocol: tcp
networks:
  mynet:
    name: dockercompose12077446871503659393_mynet
    driver: bridge